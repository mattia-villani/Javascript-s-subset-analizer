COMPILER JavaScriptPL

    CHARACTERS
          digit           = "0123456789".
          lletter         = "abcdefghijklmnopqrstuvwxyz".
          uletter         = "ABCDEFGHIJKLMNOPQRSTUVWXYZ".
          letter          = lletter + uletter.
          uscore          = '_'.
          esc             = '\\'.
          escapable       =  '"' + esc.
          sign            = "+-".
          character       = ANY - escapable.



     TOKENS
           SEMI           = ';'.
           OPENBRACE      = '{'.
           CLOSEBRACE     = '}'.
           OPENBRACKET    = '('.
           CLOSEBRACKET   = ')'.
           STRING         = '"' { character | ( esc escapable ) }  '"'.

           WORD           = ( ( letter | uscore ) { digit | letter | uscore } ).
           NUMBER         = [ sign ] digit { digit }.

           PLUS           = '+'.
           MINUS          = '-'.
           MULT           = '*'.
           DIV            = '/'.
           MOD            = '%'.
           AND            = "&&".
           OR             = "||".
           NOT            = "!".

           GT             = ">".
           LT             = "<".
           EGT            = ">=".
           ELT            = "<=".
           EQ             = "==".
           NEQ            = "!=".
           ASSIGN         = "=".
           COLON          = ":".
           PREINC         = "++".

           COMMA          = ",".
           NEWLINE        = "\n".


    COMMENTS FROM "//" TO "\n"
    COMMENTS FROM "/*" TO "*/" NESTED

     PRODUCTIONS
           JavaScriptPL = ANY.
END JavaScriptPL.